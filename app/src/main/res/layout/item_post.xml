<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/item_top_bottom_padding"
    android:paddingEnd="@dimen/item_side_padding"
    android:paddingStart="@dimen/item_side_padding"
    android:paddingTop="@dimen/item_top_bottom_padding">

    <TextView
        android:id="@+id/item_post_title"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/item_post_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
